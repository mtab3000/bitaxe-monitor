[MASTER]
jobs=4
persistent=yes
suggestion-mode=yes
unsafe-load-any-extension=no

[MESSAGES CONTROL]
# Disable specific pylint warnings that are not critical for this project
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0613,  # unused-argument
    R0912,  # too-many-branches
    R0915,  # too-many-statements
    R0201,  # no-self-use
    W0212,  # protected-access (for tests)
    C0103,  # invalid-name (for short variable names)
    W0511,  # fixme (TODO comments)
    R0902,  # too-many-instance-attributes
    R0914,  # too-many-locals
    C0301,  # line-too-long (handled by black formatter)
    W0622,  # redefined-builtin (for common names like 'id', 'type')
    R0911,  # too-many-return-statements
    R0904,  # too-many-public-methods

[FORMAT]
max-line-length=120
max-module-lines=1000
indent-string='    '

[DESIGN]
max-args=10
max-attributes=15
max-bool-expr=5
max-branches=15
max-locals=20
max-parents=7
max-public-methods=25
max-returns=6
max-statements=50

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no

[VARIABLES]
additional-builtins=
allow-global-unused-variables=yes
allowed-redefined-builtins=id,type,input,open,range,round,max,min,sum,all,any

[CLASSES]
defining-attr-methods=__init__,__new__,setUp,__post_init__
exclude-protected=_asdict,_fields,_replace,_source,_make
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=cls

[IMPORTS]
known-third-party=
    requests,
    flask,
    pandas,
    numpy,
    plotly,
    pytest

[BASIC]
good-names=i,j,k,ex,Run,_,df,id,ip,ts,Hz,ms,ns,us,T,f,x,y,z,dt,dx,dy,dz
bad-names=foo,bar,baz,toto,tutu,tata
include-naming-hint=yes

[TYPECHECK]
ignored-modules=
ignored-classes=
generated-members=

[REPORTS]
output-format=text
reports=yes
score=yes
msg-template="{path}:{line}:{column}: {msg_id}: {msg} ({symbol})"

[EXCEPTIONS]
overgeneral-exceptions=Exception
